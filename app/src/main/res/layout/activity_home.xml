    <!--中间部分容器-->

    <!--底部菜单-->
    <FrameLayout
            android:id="@+id/containerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottomMenuLayout"/>

    <LinearLayout
            android:id="@+id/bottomMenuLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

        <!--主页菜单-->
        <Button
                android:id="@+id/homePageButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:text="@string/homePage"
                android:onClick="onMenu1Clicked"/>

        <!--剧集菜单-->
        <Button
                android:id="@+id/shortPlayButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:text="@string/shortPlay"
                android:onClick="onMenu2Clicked"/>
        <!--好友菜单-->
        <Button
                android:id="@+id/friendsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/friends"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:onClick="onMenu2Clicked"/>
        <!--我的菜单-->
        <Button
                android:id="@+id/mineButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:text="@string/mine"
                android:onClick="onMenu2Clicked"/>
    </LinearLayout>

</RelativeLayout>

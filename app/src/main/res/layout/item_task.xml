<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/category_item_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:padding="5dp"
        tools:context=".adapter.TaskItemAdapter">

    <!-- 第一行的 LinearLayout -->
    <RelativeLayout
            android:id="@+id/task_text_info_layout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

        <RelativeLayout
                android:id="@+id/first_row_layout"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

            <!-- 任务名称 -->
            <TextView
                    android:id="@+id/task_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务名称"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

            <!-- 图标 -->
            <ImageView
                    android:id="@+id/task_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/task_gift"
                    android:layout_toEndOf="@id/task_name"
                    android:layout_marginStart="20dp" />

            <!-- 任务奖励文本 -->
            <TextView
                    android:id="@+id/task_reward_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="这里显示任务奖励内容"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/task_icon"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp" />

        </RelativeLayout>

        <!-- 第二行的文本 -->
        <TextView
                android:id="@+id/task_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="任务内容说明介绍"
                android:textSize="12sp"
                android:layout_below="@+id/first_row_layout"
                android:layout_marginTop="5dp"
                android:textColor="@color/black" />
    </RelativeLayout>
    <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/task_text_info_layout"
            android:layout_alignParentEnd="true"
            android:gravity="center">
        <!-- 按钮 -->
        <Button
                android:id="@+id/task_button"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="去完成"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner_bg_blue" />
    </LinearLayout>
    <!-- 下划线 -->
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A5A5A5"
            android:layout_alignParentBottom="true" />

</RelativeLayout>
